                                    <Button text="Quote" icon="sap-icon://sales-quote" iconFirst="false" type="Transparent" enabled="true" press="_onFioriListReportActionButtonPress2">
                                        <!-- Botão "Quote" com várias propriedades configuradas -->
                                        <layoutData>
                                            <OverflowToolbarLayoutData moveToOverflow="true"/>
                                        </layoutData>
                                    </Button>
                                    <Button text="Reject" icon="sap-icon://cancel" iconFirst="false" type="Transparent" enabled="true">
                                        <!-- Botão "Reject" com várias propriedades configuradas -->
                                        <layoutData>
                                            <OverflowToolbarLayoutData moveToOverflow="true"/>
                                        </layoutData>
                                    </Button>
                                    <Button icon="sap-icon://action-settings" type="Transparent">
                                        <!-- Botão de configurações com várias propriedades configuradas -->
                                        <layoutData>
                                            <OverflowToolbarLayoutData moveToOverflow="true"/>
                                        </layoutData>
