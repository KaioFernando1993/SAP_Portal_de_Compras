                                            <ObjectNumber number="3" unit="UN" emphasized="false"/>
                                        </items>
                                    </HBox>
                                    <HBox alignItems="Stretch" justifyContent="End" alignContent="Stretch">
                                        <items>
                                            <ObjectNumber number="300" unit="BRL" emphasized="false"/>
                                        </items>
                                    </HBox>
                                    <ObjectStatus text="AC01" width="auto"/>
                                    <!-- Status do objeto com texto e largura automática -->
                                    <ObjectStatus text="Open" width="auto" state="Success" icon="sap-icon://status-positive"/>
                                    <!-- Status do objeto com texto, largura automática, estado de sucesso e ícone -->
                                    <ObjectStatus text="" width="auto"/>
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </items>
            </VBox>
        </f:content>
        <f:footer>
            <!-- Rodapé -->
            <OverflowToolbar design="auto">
                <!-- Barra de ferramentas com design automático -->
                <content>
                    <!-- Conteúdo da barra de ferramentas -->
                    <ToolbarSpacer/>
                    <Button text="Save" type="Emphasized" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"/>
