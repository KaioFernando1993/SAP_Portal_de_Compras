                        </layout1:content>
                    </layout1:VerticalLayout>
                    <Table width="100%" growing="true" growingScrollToLoad="true" growingThreshold="25" mode="SingleSelectLeft" updateFinished="_onFioriListReportTableUpdateFinished">
                        <!-- Uma tabela com várias configurações -->
                        <headerToolbar>
                            <!-- Barra de ferramentas do cabeçalho -->
                            <OverflowToolbar design="Transparent">
                                <content>
                                     <!-- Conteúdo da barra de ferramentas -->
                                    <Title textAlign="Begin" text="Quotes"/>
