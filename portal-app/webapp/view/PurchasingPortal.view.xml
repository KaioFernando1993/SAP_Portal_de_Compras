                    </filterbar:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <!-- Conteúdo principal do cabeçalho -->
            <VBox fitContainer="true">
                <!-- Usando um VBox com ajuste de tamanho -->
                <items>
                    <layout1:VerticalLayout width="100%" visible="true">
