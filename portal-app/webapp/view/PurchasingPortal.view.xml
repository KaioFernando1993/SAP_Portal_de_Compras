                                <!-- Definimos um controle para o filtro -->
                                <filterbar:control>
                                    <MultiComboBox>
                                        <items>
                                            <core:Item key="Yes" text="Yes"/>
                                            <!-- Definimos opções para o MultiComboBox -->
                                        </items>
                                    </MultiComboBox>
                                </filterbar:control>
                            </filterbar:FilterItem>
