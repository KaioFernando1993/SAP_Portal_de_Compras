                                </header>
                            </Column>
                            <Column width="auto" minScreenWidth="Phone">
                                <header>
                                    <Text text="Status" width="auto"/>
                                </header>
                            </Column>
                            <Column width="auto" minScreenWidth="Phone">
                                <header>
                                    <Text text="Reason for rejection" width="auto"/>
                                </header>
                            </Column>
                        </columns>
                        <items>
                            <!-- Itens da tabela -->
                            <ColumnListItem type="Active">
                                <cells>
                                    <!-- Células do item da coluna -->
                                    <ObjectIdentifier title="6000678103-10" text=""/>
                                    <!-- Identificador de objeto com título -->
                                    <ObjectIdentifier title="12345678" text="Adaptador para tomadas eleticas"/>
                                    <!-- Identificador de objeto com título e texto -->
                                    <ObjectStatus text="21/11/2023" width="auto"/>
